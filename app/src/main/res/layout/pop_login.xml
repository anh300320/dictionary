<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77A7F9">

    <TextView
        android:id="@+id/pop_tv_login_now"
        android:text="You have to log in to use this feature."
        android:textSize="15dp"
        android:textColor="#2849EF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />
    <Button
        android:id="@+id/login_pop_btn_login"
        android:text="LOG IN"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/pop_tv_login_now"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>